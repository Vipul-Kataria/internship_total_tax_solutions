<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Services</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/CSS/adminMain.css">
    <link rel="stylesheet" href="/CSS/adminServiceShowPage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="/CSS/showEnquiry.css">

</head>
<body>
    <%- include("./includes/adminNavBar.ejs") %>
<div class="admin-container">
    <%- include("./includes/flash.ejs") %>

    <h1>All Enquiries</h1>
    <% if(getEnquiry.length === 0){ %>
        <p>No enquiries found.</p>
    <% } else { %>
        <div class="enquiry-grid">
            <% getEnquiry.forEach(enq => { %>
                <div class="enquiry-card">
                    <h5>Name: <%= enq.name %></h5>
                    <p>Email: <%= enq.email %></p>
                    <p>Phone: <%= enq.phone %></p>
                    <p>Message: <%= enq.message %></p>
                    
                    <div class="card-buttons">
                        <!-- Mark as Done button -->
                        <button class="mark-done-btn" onclick="toggleDone(this)">Mark as Done ‚úÖ</button>

                        <!-- Delete button -->
                        <form action="/admin/enquiry/<%= enq._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="delete-btn">Delete üóëÔ∏è</button>
                        </form>
                    </div>
                </div>
                
            <% }) %>
        </div>
    <% } %>
</div>

<script>
    function toggleDone(button){
        button.classList.toggle('done');
        if(button.classList.contains('done')){
            button.textContent = "Done ‚úîÔ∏è";
        } else {
            button.textContent = "Mark as Done ‚úÖ";
        }
    }
</script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>