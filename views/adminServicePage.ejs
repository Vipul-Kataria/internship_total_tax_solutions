<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Services</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/CSS/adminMain.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"/>

</head>

<body>
  <!-- Sidebar -->
  <%- include("./includes/adminNavBar.ejs") %>

  <div class="admin-container">
    <%- include("./includes/flash.ejs") %>

    <h1>Manage Services</h1>

    <!-- Add Service Button -->
    <div class="mb-4 text-end">
      <a href="/admin/service/add" class="btn" style="background-color:#E2C044; color:#1E3D59; font-weight:600;">
        <i class="fa-solid fa-plus"></i> Add Service
      </a>
    </div>
     <div class="admin-grid">
        <% if (service.length === 0) { %>
            <p>No services created yet.</p>
        <% } else { %>
            <% service.forEach(service => { %>
                <div class="admin-card services-card">
                    <h2><%= service.name %></h2>
                    <p><%= service.description %></p>
                    <small>Created by: <%= service.createdBy.username %></small>
                    <div class="mt-3">
                        <a href="/admin/service/<%= service._id %>/show" class="btn btn-md" style="background-color:#1E3D59; color:#FFF;">View Service</a>
                        
                    </div>
                </div>
            <% }) %>
        <% } %>
    </div>
    
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
